local UserInputService = game:GetService("UserInputService")
local HttpService = game:GetService("HttpService")

-- Window Settings
local TitleText = "Onyx Hub"
local RobloxUserId = 12515670 -- Your Roblox userId here

-- Insert component creation functions like AddToggle, AddSlider, AddDropdown here
-- These should define reusable functions or modules to create UI controls dynamically.

-- Example placeholder for AddToggle
local function AddToggle(parent, name, default, callback)
    local toggleFrame = Instance.new("Frame", parent)
    toggleFrame.Size = UDim2.new(1, -10, 0, 28)
    toggleFrame.BackgroundTransparency = 1

    local label = Instance.new("TextLabel", toggleFrame)
    label.Size = UDim2.new(1, -30, 1, 0)
    label.Position = UDim2.new(0, 0, 0, 0)
    label.Text = name
    label.TextColor3 = Color3.new(1, 1, 1)
    label.Font = Enum.Font.SourceSans
    label.TextSize = 14
    label.BackgroundTransparency = 1
    label.TextXAlignment = Enum.TextXAlignment.Left

    local box = Instance.new("ImageButton", toggleFrame)
    box.Size = UDim2.new(0, 24, 0, 24)
    box.Position = UDim2.new(1, -28, 0.5, -12)
    box.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    box.BorderSizePixel = 0
    local corner = Instance.new("UICorner", box)
    corner.CornerRadius = UDim.new(0, 4)

    local tick = Instance.new("Frame", box)
    tick.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
    tick.Size = UDim2.new(0, 0, 0, 0)
    tick.Position = UDim2.new(0.5, 0, 0.5, 0)
    tick.AnchorPoint = Vector2.new(0.5, 0.5)
    tick.BorderSizePixel = 0
    Instance.new("UICorner", tick).CornerRadius = UDim.new(1, 0)

    local toggled = default
    local function setToggle(state)
        toggled = state
        TweenService:Create(tick, TweenInfo.new(0.25), {
            Size = state and UDim2.new(1, -6, 1, -6) or UDim2.new(0, 0, 0, 0)
        }):Play()
        if callback then callback(toggled) end
    end
    setToggle(toggled)

    box.MouseButton1Click:Connect(function()
        setToggle(not toggled)
    end)
end

